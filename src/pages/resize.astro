---
import ToolLayout from '../layouts/ToolLayout.astro';
import PresetToolContainer from '../components/PresetToolContainer';
---

<ToolLayout 
  title="Image Resizer" 
  description="Resize your images to any dimension while maintaining quality. Perfect for web optimization, social media, and print preparation."
  toolName="resize"
>
  <!-- Quick Preset Links -->
  <div class="max-w-7xl mx-auto px-4 mb-6">
    <div class="bg-white border border-gray-200 rounded-lg p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Popular Presets</h3>
      <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-3">
        <a href="/presets/instagram-post" class="p-3 bg-gradient-to-r from-purple-500 to-pink-500 text-white rounded-lg text-center text-sm font-medium hover:from-purple-600 hover:to-pink-600 transition-all">
          Instagram Post<br><span class="text-xs opacity-90">1080×1080</span>
        </a>
        <a href="/tools/instagram-story" class="p-3 bg-gradient-to-r from-purple-500 to-pink-500 text-white rounded-lg text-center text-sm font-medium hover:from-purple-600 hover:to-pink-600 transition-all">
          Instagram Story<br><span class="text-xs opacity-90">1080×1920</span>
        </a>
        <a href="/presets/youtube-thumbnail" class="p-3 bg-red-500 text-white rounded-lg text-center text-sm font-medium hover:bg-red-600 transition-all">
          YouTube Thumbnail<br><span class="text-xs opacity-90">1280×720</span>
        </a>
        <a href="/presets/facebook-cover" class="p-3 bg-blue-600 text-white rounded-lg text-center text-sm font-medium hover:bg-blue-700 transition-all">
          Facebook Cover<br><span class="text-xs opacity-90">1200×630</span>
        </a>
        <a href="/presets/twitter-header" class="p-3 bg-sky-500 text-white rounded-lg text-center text-sm font-medium hover:bg-sky-600 transition-all">
          Twitter Header<br><span class="text-xs opacity-90">1500×500</span>
        </a>
      </div>
    </div>
  </div>
    <PresetToolContainer 
    preset={{
      width: 1080,
      height: 1920,
      unit: 'px',
      maintainAspectRatio: false,
      resizeMethod: 'fill',
      quality: 95
    }}
    presetName="Instagram Story"
    client:load 
  />

</ToolLayout>