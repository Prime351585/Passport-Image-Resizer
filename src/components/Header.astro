<header class="font-link ">
    <div class="navbar fixed top-0 left-0 right-0 flex flex-col items-center px-4 bg-white z-50 shadow-md rounded-b-3xl overflow-hidden transition-all duration-300 ease-in-out md:relative md:shadow-none md:rounded-none md:h-auto" style="height: 5rem;">
        <!-- Top bar with logo and toggle -->
        <div class="w-full flex justify-between items-center h-20 shrink-0">
            <div id="logo" class="text-black font-bold text-xl relative z-10">Logo</div>
            
            <!-- Desktop Menu -->
            <nav class="hidden md:flex fixed left-1/2 -translate-x-1/2 space-x-7 backdrop-blur-sm p-3 px-5 bg-white/20 rounded-3xl text-black font-bold">
                <a href="/" class="hover:text-white/60 transition-colors duration-300 ease-in-out">Home</a>
                <a href="/resize" class="hover:text-white/60 transition-colors duration-300 ease-in-out">Resize</a>
                <a href="/compress" class="hover:text-white/60 transition-colors duration-300 ease-in-out">Compress</a>
                <a href="/convert" class="hover:text-white/60 transition-colors duration-300 ease-in-out">Convert</a>
                <a href="/passport" class="hover:text-white/60 transition-colors duration-300 ease-in-out">Passport</a>
            </nav>

            <!-- Mobile Menu Button -->
            <button 
                id="menuToggle" 
                class="md:hidden text-black font-bold text-2xl z-10 w-10 h-10 flex items-center justify-center transition-transform duration-300 hover:scale-110"
                aria-label="Toggle menu"
                aria-expanded="false"
            >
                ☰
            </button>
            
            <button class="hidden md:block bg-primary hover:bg-primary/90 p-2 px-4 rounded-3xl text-white transition-colors duration-300 cursor-pointer">
                Get Started
            </button>
        </div>

        <!-- Mobile Menu (Inside navbar) -->
        <nav id="mobileMenu" class="hidden md:hidden flex-col justify-evenly items-start w-full px-4 pb-20 flex-1 text-black font-bold opacity-0 transition-opacity duration-300">
            <a href="/" class="menu-item w-full py-4 hover:text-primary transition-colors duration-300 border-b border-gray-200">Home</a>
            <a href="/resize" class="menu-item w-full py-4 hover:text-primary transition-colors duration-300 border-b border-gray-200">Resize</a>
            <a href="/compress" class="menu-item w-full py-4 hover:text-primary transition-colors duration-300 border-b border-gray-200">Compress</a>
            <a href="/convert" class="menu-item w-full py-4 hover:text-primary transition-colors duration-300 border-b border-gray-200">Convert</a>
            <a href="/passport" class="menu-item w-full py-4 hover:text-primary transition-colors duration-300 border-b border-gray-200">Passport</a>
            
            <button class="bg-primary hover:bg-primary/90 p-3 px-6 rounded-3xl text-white text-center mt-6 w-full transition-colors duration-300">
                Get Started
            </button>
        </nav>
    </div>
</header>

<script>
    const menuToggle = document.getElementById('menuToggle');
    const mobileMenu = document.getElementById('mobileMenu');
    const navbar = document.querySelector('.navbar') as HTMLElement;
    
    if (menuToggle && mobileMenu && navbar) {
        let isOpen = false;
        
        menuToggle.addEventListener('click', () => {
            isOpen = !isOpen;
            
            if (isOpen) {
                // Open menu
                mobileMenu.classList.remove('hidden');
                mobileMenu.classList.add('flex');
                
                navbar.style.height = '100vh';
                navbar.style.borderRadius = '0';
                
                // Fade in menu after height animation starts
                requestAnimationFrame(() => {
                    requestAnimationFrame(() => {
                        mobileMenu.style.opacity = '1';
                    });
                });
                
                menuToggle.textContent = '✕';
                menuToggle.setAttribute('aria-expanded', 'true');
                document.body.style.overflow = 'hidden'; // Prevent body scroll
            } else {
                // Close menu
                mobileMenu.style.opacity = '0';
                navbar.style.height = '5rem';
                navbar.style.borderRadius = '0 0 1.5rem 1.5rem';
                
                // Wait for animations to complete
                setTimeout(() => {
                    mobileMenu.classList.add('hidden');
                    mobileMenu.classList.remove('flex');
                }, 300);
                
                menuToggle.textContent = '☰';
                menuToggle.setAttribute('aria-expanded', 'false');
                document.body.style.overflow = ''; // Restore body scroll
            }
        });
        
        // Close menu when clicking on menu items
        const menuItems = mobileMenu.querySelectorAll('.menu-item');
        menuItems.forEach(item => {
            item.addEventListener('click', () => {
                if (isOpen) {
                    menuToggle.click(); // Trigger the toggle to close
                }
            });
        });
    }
</script>
